---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import type { GetStaticPaths } from 'astro';

export const getStaticPaths = (async () => {
  const exercises = await getCollection('exercises');
  return exercises.map(exercise => ({
    params: { slug: exercise.slug },
    props: { exercise },
  }));
}) satisfies GetStaticPaths;

const { exercise } = Astro.props;
const { Content } = await exercise.render();

const year = exercise.slug.split('/')[0];
const dayNum = exercise.slug.split('/')[1].replace('day', '');
---

<Layout title={`Day ${dayNum} - ${year} | Advent of JavaScript`}>
  <nav class="breadcrumb">
    <a href="/">Home</a> / <a href={`/#${year}`}>{year}</a> / Day {dayNum}
  </nav>

  <article class="exercise">
    <Content />
  </article>
</Layout>

<style is:global>
  .breadcrumb {
    margin-bottom: 2rem;
    color: #94a3b8;
  }

  .breadcrumb a {
    color: var(--accent);
    text-decoration: none;
  }

  .breadcrumb a:hover {
    text-decoration: underline;
  }

  .exercise {
    line-height: 1.8;
  }

  .exercise h1 {
    font-size: 2rem;
    color: var(--accent);
    margin-bottom: 1.5rem;
  }

  .exercise h2 {
    font-size: 1.5rem;
    color: var(--accent);
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid #334155;
  }

  .exercise p {
    margin-bottom: 1rem;
    color: #cbd5e1;
  }

  .exercise pre {
    background: var(--code-bg);
    padding: 1.5rem;
    border-radius: 8px;
    overflow-x: auto;
    margin: 1.5rem 0;
    border: 1px solid #334155;
  }

  .exercise code {
    font-family: 'Courier New', monospace;
    font-size: 0.9rem;
  }

  .exercise :not(pre) > code {
    background: var(--code-bg);
    padding: 0.2rem 0.4rem;
    border-radius: 4px;
    color: var(--accent);
  }

  .exercise ul, .exercise ol {
    margin-left: 2rem;
    margin-bottom: 1rem;
  }

  .exercise li {
    margin-bottom: 0.5rem;
  }
</style>
